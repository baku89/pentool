@import '../node_modules/reset-css/reset.css'

:root
	font-size 13px
	font-family 'Inter'
	font-synthesis none
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	-webkit-text-size-adjust 100%
	--titlebar-area-height env(titlebar-area-height, 38px)
	// Color scheme
	--ui-bg #ffffff
	--ui-bg-rgb 255, 255, 255
	--ui-color #000
	--ui-color-rgb 0, 0, 0
	--ui-button #eee
	--ui-accent blue
	// UI Metrics
	--ui-pane-border-radius 1.4rem

	@media (prefers-color-scheme dark)
		--ui-bg #222
		--ui-bg-rgb 34, 34, 34
		--ui-color #fff
		--ui-color-rgb 255, 255, 255
		--ui-button #333
		--ui-accent skyblue

*, *:before, *:after
	box-sizing border-box
	outline none
	font-weight inherit
	font-style normal
	font-size inherit
	cursor inherit

button, input
	border 0
	background transparent
	color inherit
	font-size inherit
	font-family inherit
	user-select none

body
	overflow hidden
	margin 0
	height 100vh
	background var(--ui-bg)
	color var(--ui-color)

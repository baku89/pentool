@import '../common.styl'

$circle-diameter = calc(0.7 * var(--tq-input-height))
$circle-radius = calc(0.35 * var(--tq-input-height))
$picker-gap = calc(0.3 * var(--tq-input-height))

circle()
	position absolute
	margin-left calc(-0.35 * var(--tq-input-height))
	width $circle-diameter
	height $circle-diameter
	border-radius 50%
	box-shadow 0 0 0 1.5px #fff, inset 0 0 0px 1px rgba(0, 0, 0, 0.1), 0 0 1px 2px rgba(0, 0, 0, 0.4)
	transition transform 0.03s ease

	&.tweaking
		transform scale(2)
